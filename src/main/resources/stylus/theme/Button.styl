.button {
  border: 1px solid $black
  padding: 8px 10px
  display: table
  border-radius: 5px
  text-transform: uppercase
  font-size: 14px
  transition: 300ms
  height: 38px
  cursor: pointer
  &:hover {
    text-decoration: none
    transition: 300ms
  }
  &.blue {
    border-color: $blue
    background: $blue
    color: $white
    &:hover {
      opacity: .8
    }
  }
  &.red {
    border-color: $red
    background: $red
    color: $white
    &:hover {
      opacity: .8
    }
  }
  &:disabled {
    opacity: .6
    cursor: not-allowed
    &:hover {
      opacity: .6
    }
  }
  .Spinner {
    margin-right: 5px
  }
}
