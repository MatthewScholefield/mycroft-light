.metric {
  width: 280px
  height: 130px
  background: #EEE
  float: left
  display: table
  margin: 10px
  .metric-title {
    display: table;
    width: 100%;
    padding: 5px;
    box-sizing: border-box;
    color: #444;
    font-weight: bold;
    background: #DDD;
    input {
      width: 60px
      float: left
      background: #efefef
    }
    span {
      float: left
      padding: 8px
    }
  }
  .metric-value {
    font-size: 30px;
    box-sizing: border-box;
    width: 100%;
    text-align: center;
    margin: 20px 0;
  }
}

.sql {
  a {
    margin-top: 10px
    display: table
  }
  textarea {
    display: table
    width: 100%
    height: 250px
    margin: 10px 0
    box-sizing: border-box
    padding: 10px
    border: 2px solid #AAA
  }
  > div {
    button {
      box-sizing: border-box;
      padding: 10px;
      width: calc(50% - 20px);
      background: linear-gradient(#539df3, rgb(57, 116, 185));
      border: none;
      color: #FFF;
      font-weight: bold;
      font-size: 16px;
      border-radius: 100px;
      transition: 200ms
      &:hover {
        transition: 200ms
        opacity: 0.8
      }
      &:last-child {
        float: right;
      }
    }
  }
  table {
    margin-top: 20px;
    display: table;
    border: 1px solid #AAA;
    tr {
      td {
        padding: 8px 8px;
        display: table-cell;
        text-align: left;
        vertical-align: top;
        padding-left: 16px;
        border-right: 1px solid #AAA;
        &:last-child {
          border-right: none;
        }
      }
      &:nth-child(odd) {
        background: #EEE
      }
    }
  }
}

.user {
  input {
    margin: 5px 0
  }
  select {
    margin: 5px 0
    display: table
    padding: 0 8px;
    max-width: 260px;
    width: 100%;
    height: 38px;
    border: 1px solid #cfcfcf;
    border-radius: 5px;
    background-color: #fff;
    background-image: none;
    box-shadow: none;
    color: #333;
    font-size: 16px;
    line-height: 1.2;
  }
  button {
    box-sizing: border-box;
    padding: 10px 20px;
    background: linear-gradient(#539df3, rgb(57, 116, 185));
    border: none;
    color: #FFF;
    font-weight: bold;
    font-size: 16px;
    border-radius: 100px;
    transition: 200ms
    &:hover {
      transition: 200ms
      opacity: 0.8
    }
  }

}