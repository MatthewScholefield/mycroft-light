.auth {
  margin: 20px auto
  background: #FFF
  border-radius: 20px
  width: 347px
  height: 680px
  box-shadow: 0 8px 20px 0 rgba(0, 0, 0, 0.30)
  .BackButton {
    margin-left: 10px
  }
  .message {
    display: table
    width: 260px
    margin: 20px auto
    font-size: 20px
    color: #4a4a4a
    font-weight: bold
    text-align: left
  }
  .SocialLogin {
    margin: 0 auto
    display: table
    > div {
      margin: 0 auto
      display: table
    }
  }
  .title {
    display: table;
    box-sizing: border-box;
    padding: 24px 18px;
    width: 100%;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    background: #2C3E50;
    color: #fff;
    text-align: center;
    text-transform: uppercase;
    font-weight: 600;
    font-size: 23px;
    height: 80px;
  }
  .forgot-password-link {
    display: table
    float: right
    color: #5e5e5e
    text-align: right
    text-decoration: none
    text-transform: uppercase
    font-size: 11px
    margin-top: 4px
  }
  form {
    display: table
    margin: 0 auto
    width: 260px
    > input {
      width: 100%
      height: 40px
      border-radius: 0
      border-color: #6c6c6c
      border-top-left-radius: 5px
      border-top-right-radius: 5px
      transition: 200ms
      position: relative
      z-index: 1
      &:focus, &:hover {
        border-color: #6c6c6c
        box-shadow: none
      }
    }
    > div {
      display: table
      width: 100%
    }
    > .button {
      background: #22A7F0
      color: #FFF !important
      font-weight: 600
      padding: 8px 14px
      display: table
      margin: 10px auto
      height: 40px;
      font-size: 14px;
    }
    small {
      width: 100%
      display: table
      height: 33px
      font-size: 12px
      margin-top: 4px
      color: #8f8f8f
      span {
        display: table
      }
      &.error {
        float: none
        font-size: 12px
        color: #ff6666
        text-align: left
      }
    }
    &.forgot-password {
      input {
        border-radius: 5px !important
      }
    }
    .field-password-auth {
      margin-top: -1px
      border-radius: 0
      border-bottom-left-radius: 5px
      border-bottom-right-radius: 5px
      border-color: #6c6c6c
      &.error {
        position: relative
        z-index: 2
      }
    }
  }
  &.login {
    small {
      display: inline !important
    }
  }
  .link {
    display: table
    padding: 15px 0
    width: 100%
    color: #5c5c5c
    text-align: center
    font-size: 16px
    margin-top: 7px
    &:hover {
      text-decoration: none
    }
    span {
      text-decoration: underline
      margin-left: 5px
      color: #22A7F0
    }
  }
  &.signup {
    .link {
      margin-top: -10px
    }
  }
  &.forgot-password {
    button {
      margin-top: 27px
    }
    img {
      width: 25px
      position: relative
      left: 5px
    }
  }
  &.signup, &.login {
    .FormField {
      margin-bottom: 0
    }
    .field-email {
      input {
        border-bottom-left-radius: 0
        border-bottom-right-radius: 0
        &:focus, &:hover {
          border-color: #cfcfcf
          box-shadow: none
        }
      }
    }
    .field-password-auth {
      > div {
        border-top-left-radius: 0
        border-top-right-radius: 0
      }
    }
  }
  .with {
    display: table
    margin: 20px 0 36px 0
    width: 100%
    color: #5c5c5c
    text-align: center
    font-weight: 600
    font-size: 22px
  }
  .recovery-password {
    img {
      display: table
      margin: 40px auto
    }
    .FormLabel {
      color: #4a4a4a
      font-weight: 600
    }
    .field-password {
      width: 100%
      border-color: #cfcfcf
    }
  }
  &.blue {
    background: #22A7F0
    .message {
      box-sizing: border-box
      width: 100%
      padding: 30px 40px
      a {
        width: 80px
        text-align: center
        background: #FFF
        color: #22A7F0
      }
      div {
        margin-top: 30px
        font-size: 50px
        font-weight: bold
        color: #FFF
      }
    }
  }
  &.new-password {
    .FormField.last {
      margin-bottom: 0
    }
  }
}

@media screen and (max-width: 384px) {
  .auth {
    width: 100%
    margin: 0 auto
  }
}

@media screen and (max-height: 570px) {
  .auth {
    min-height: 100vh
    .link {
      margin-top: 20px
    }
    &.signup {
      .link {
        margin-top: 0
      }
    }
  }
}

.signup {
  .tou {
    input {
      float: left
      width: 20px
      height: 20px
      margin: 0 5px
    }
    display: table
    margin: 20px auto 0 auto
  }
  a {
    &[disabled] {
      -webkit-filter: grayscale(90%);
      filter: grayscale(90%);
    }
  }
}
