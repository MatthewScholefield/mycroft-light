.device {
  .card-col {
    max-width: 280px;
    margin: 10px 16px;
  }
  .add {
    border: 2px solid #000
    border-radius: 5px
    padding: 10px
    width: 100%
    text-align: center
    color: #000
    display: table
    box-sizing: border-box
    font-weight: 600
    max-size: 280px
    margin: 0 auto
    &.empty {
      max-width: 50%
      width: calc(100% - 35px)
      margin: 0 auto
    }
    &:hover {
      text-decoration: none
    }
  }

  .info-section {
    width: 100%
    padding: 10px
    display: table
    box-sizing: border-box
    border-bottom: 1px solid #DDD
    span {
      color: #333
      width: 100%
      padding: 3px 0
      box-sizing: border-box
      display: table
    }
    small {
      color: #777
    }
    &:last-child {
      border-bottom: none
    }
    .switch {
      float: right
      margin-top: 6px
    }
  }
}

@media screen and (max-width: 540px) {
  .device {
    .add {
      margin: 0 auto !important
      max-width: 300px !important
    }
  }
}
