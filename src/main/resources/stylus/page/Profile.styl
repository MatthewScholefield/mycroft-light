@import "../Grid.styl"

.profile {
  > .Row {
    margin-top: 44px
  }
  .profile-picture {
    display: table
    float: right
    width: 275px
    position: relative
    a {
      top: 90px
    }
  }
  .profile-connected {
    display: table
    width: 275px
    float: right
    .profile-connected-title {
      display: table
      width: 100%
      color: #4a4a4a
      font-weight: 600
      text-transform: uppercase
      font-size: 14px
      margin: 25px 0 10px 0
    }
    .profile-connected-items {
      display: table
      small {
        display: table
        width: 100%
        color: #888
      }
    }
  }
  .gender {
    display: table
    width: 100%
    button {
      background: #FFF
      border: 1px solid #333
      font-size: 16px
      margin-right: 5px
      width: 40px
      height: 40px
      text-align: center
      padding: 0
      &:focus {
        outline: none
        box-shadow: none
      }
      &.active {
        background: #DDD
      }
      &:hover {
        background: #DDD
      }
    }
  }
  .button-group {
    button {
      //width: 38px
    }
  }
}

@media screen and (max-width: $xs) {
  .profile {
    .profile-picture, .profile-connected {
      float: left
    }
  }
}
