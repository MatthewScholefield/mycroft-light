.SubHeader {
  height: 38px
  width: 100%
  z-index: 10
  box-sizing: border-box
  top: 60px
  position: fixed
  > div {
    height: 38px
    width: 100%
    display: table
    box-sizing: border-box
    position: absolute
    z-index: 100
  }
  .navigation {
    background: #22A7F0
    > div {
      display: table
      margin: 0 auto
    }
    .nav-item {
      color: #2C3E50
      opacity: 0.5
      display: table
      float: left
      padding: 7px
      margin: 0 14px
      i {
        float: left
        margin-right: 8px
        &.fa {
          font-size: 24px
        }
      }
      span {
        float: left
        font-size: 17px
        margin-top: 1px
        text-transform: capitalize
        font-weight: 600
      }
      &.active {
        opacity: 1
      }
    }
  }
  .alert {
    cursor: default
    z-index: 100
    -webkit-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none
    span {
      display: table
      padding: 8px
      font-size: 16px
      width: calc(100vw - 40px)
      text-align: center
      font-weight: 600
      float: left
      i {
        margin-right: 8px
        cursor: default
        font-size: 16px
        &.material-icons {
          position: relative
          top: 3px
        }
      }
    }
    > i {
      position: absolute
      right: 10px
      padding: 9px
      display: table
      font-size: 20px
    }
    &.closeable {
      cursor: pointer
      i {
        cursor: pointer
      }
    }
  }
  .error {
    background: #ff6666
    span {
      color: #fff
    }
    i {
      color: #FFF
    }
  }
  .success {
    background: #b8e986
    span {
      color: #4b5d53
    }
    i {
      color: #4b5d53
    }
  }
  .warning {
    background: #FDDE80
    span {
      color: #6b4f00
    }
    i {
      color: #6b4f00
    }
  }
  .confirmation {
    background: #8a83e0
    > div {
      display: table
      margin: 0 auto
      span {
        float: left
        color: #FFF
        font-size: 16px
        padding: 8px
      }
      .buttons {
        float: left
        padding: 5px
        button {
          text-transform: uppercase
          outline: none
          background: #726fb8
          border: none
          color: #FFF
          padding: 5px
          min-width: 110px
          transition: 300ms
          font-size: 13px
          &:first-child {
            border-right: 1px solid #6463a1
            border-top-left-radius: 20px
            border-bottom-left-radius: 20px
          }
          &:last-child {
            border-left: 1px solid #6463a1
            border-top-right-radius: 20px
            border-bottom-right-radius: 20px
          }
          &:hover {
            opacity: 0.7
            transition: 300ms
          }
        }
      }
      > i {
        padding: 12px 0
        font-size: 14px
        float: left
        color: #FFF
      }
    }
  }
}

@media screen and (max-width: 799px) {
  .SubHeader {
    top: 60px
    button {
      min-width: 50px !important
    }
  }
}
