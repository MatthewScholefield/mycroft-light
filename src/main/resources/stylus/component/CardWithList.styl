@import "../Grid.styl";

.card-with-list {
  background: #22A7F0
  display: table
  width: 400px
  border-radius: 20px
  box-shadow: 0 8px 20px 0 rgba(0, 0, 0, 0.30)
  box-sizing: border-box
  padding: 30px
  margin: 40px auto
  span {
    color: #FFF
    font-size: 22px
    padding: 0 10px
  }
  ul {
    padding: 0 30px
    width: 100%
    display: table
    box-sizing: border-box
    list-style: none
    li {
      font-size: 16px
      margin: 10px 0
      span {
        display: table
      }
      &:before {
        content: "âž¥"
        position: absolute
        margin-left: -20px
      }
    }
  }
}

@media screen and (max-width: $xs) {
  .card-with-list {
    width: 100%
  }
}
