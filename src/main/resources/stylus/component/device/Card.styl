.device {
  text-decoration: none
  a {
    text-decoration: none
    &:hover {
      text-decoration: none
    }
  }
  .card-col {
    margin: 20px 3%
    width: 44%
  }
  .card {
    box-shadow: 0 8px 20px 0 rgba(0, 0, 0, 0.30)
    border-radius: 15px !important
    background: #22A7F0 !important
    text-decoration: none
    .title {
      width: 100%
      display: table
      text-align: center
      font-size: 30px
      color: #FFF
      margin: 10px 0
      height: 42px
    }
    .image {
      width: 100%
      height: 200px
      i {
        color: #2C3E50
        font-size: 207px
        text-align: center
        width: 100%
        max-height: 160px
      }
      img {
        width: 100%
        margin: 20px 0 30px 0
        max-height: 160px
        &.picroft {
          width: 80%
          margin: 20px 10% 0 10%
        }
      }
      div {
        margin-top: 50px
        width: 100%
        float: left
        i {
          font-size: 82px
          text-align: center
          width: initial
          float: left
        }
      }
    }
    .info {
      margin-bottom: 20px
      span {
        width: 100%
        display: table
        text-align: center
        text-transform: uppercase
        color: #FFF
        font-size: 15px
        height: 21px
        &.card-label {
          color: #2d3b51
          font-size: 12px
        }
      }
    }
    &:hover {
      text-decoration: none
    }
  }
  &:hover {
    text-decoration: none
  }
}


@media screen and (max-width: 540px) {
  .card-col {
    width: 100% !important
    max-width: 300px
    margin: 20px auto !important
  }
}
