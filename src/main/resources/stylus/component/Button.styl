$clickEffectColor = #2C3E50;
$clickEffectStartingOpacity = 0.8;

.button {
  display: inline-block
  padding: 10px 16px
  background: #FFF
  width: auto
  color: #000
  text-decoration: none
  cursor: default
  position: relative
  overflow: hidden
  text-align: center;
  text-transform: uppercase;
  font-weight: bold
  border-radius: 2px
  vertical-align: text-top
  margin-top: 5px

  span {
    position: relative
    z-index: 1
  }

  .underlay {
    position: absolute
    width: 0
    height: 0
    left: 0
    top: 0
    border-radius: 100%
    background: $clickEffectColor
    opacity: $clickEffectStartingOpacity
    transform: scale(0)

    &.anim {
      transform: scale(1)
      transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.5s ease-out
    }

    &.fadeOut {
      opacity: 0
    }
  }
}